.PHONY: all clean fclean re
.SILENT:

# **************************************************************************** #
#                                   Variable                                   #
# **************************************************************************** #

NAME	= Inception
SRC_DIR	= srcs/
BUILD	= docker build -t
RUN		= docker run
STOP	= docker stop
RM		= docker rm

# **************************************************************************** #
#                                    Sources                                   #
# **************************************************************************** #

EQUI_DIR = equirements/

NGINX_DIR = nginx/

NGINX_PATH = $(SRC_DIR)$(EQUI_DIR)$(NGINX_DIR)

# **************************************************************************** #
#                                     Rules                                    #
# **************************************************************************** #

all: $(NAME)

$(NAME):
	$(BUILD) nginx $(NGINX_PATH)
	$(RUN) -d -p 443:443 nginx

clean:
	$(STOP) $$(docker ps -aq)

fclean: clean
	$(RM) $$(docker ps -aq)

re: fclean all

