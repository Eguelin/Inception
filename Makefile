.PHONY: all clean fclean re
.SILENT:

# **************************************************************************** #
#                                   Variable                                   #
# **************************************************************************** #

NAME	= Inception
DC		= docker compose

# **************************************************************************** #
#                                    Sources                                   #
# **************************************************************************** #

SRC_DIR			= srcs/
COMPOSE_FILE	= $(SRC_DIR)docker-compose.yml

# **************************************************************************** #
#                                     Rules                                    #
# **************************************************************************** #

all: $(NAME)

$(NAME):
	$(DC) -f $(COMPOSE_FILE) up --build

clean:
	$(DC) -f $(COMPOSE_FILE) down

fclean: clean
	$(DC) -f $(COMPOSE_FILE) down --volumes --rmi all
	docker system prune --force --all

re: fclean all

